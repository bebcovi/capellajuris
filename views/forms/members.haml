- @page_title = 'Izmjena članova zbora'

#members

  - for voice in Member.voices
    %section

      %h2= voice.capitalize

      %ol
        = list_of Member.by_voice(voice).order(:last_name) do |member|
          %div= "#{member.last_name} #{member.first_name}"
          - buttons({delete: 'x'}, "/member/#{member.id}")

      - buttons({add: 'Novi član +'}, "/member/#{Member.voice_abbr(voice)}/new")

%p
  %a.arrow{href: Content.find_by_content_type('members').page} ←
  %a{href: Content.find_by_content_type('members').page} Natrag
