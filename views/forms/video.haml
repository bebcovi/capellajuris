- @page_title = "Dodavanje novog videa"

- form_tag(action: request.path_info, method: @video.id? ? 'put' : 'post') do
  %p
    %label{for: 'video-title'} Naslov
    %input#video-title{type: 'text', name: 'title', value: @video.title}
  %p
    %label{for: 'video-code'} YouTube kod
    %input{type: 'text', name: 'url', value: @video.url}
  %p
    - link_to 'Odustani', '/video', :class => 'cancel'
    %input.submit{type: 'submit', value: 'Dodaj'}
