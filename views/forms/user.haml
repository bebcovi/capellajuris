- @page_title = 'Izmjena korisničkog imena/lozinke'

- form_tag(action: '/user', method: 'put') do
  %p
    %label{for: 'username'} Staro korisničko ime:
    %input#username{type: 'text', name: 'username', maxlength: '30', autofocus: true}
    %label{for: 'username'} Novo korisničko ime:
    %input#username{type: 'text', name: 'new_username', maxlength: '30'}
  %p
    %label{for: 'password'} Stara lozinka:
    %input#password{type: 'password', name: 'password', maxlength: '30'}
    %label{for: 'password'} Nova lozinka:
    %input#password{type: 'password', name: 'new_password', maxlength: '30'}
  %p
    %input{type: 'submit', name: 'action', value: 'Promijeni'}
    %input{type: 'submit', name: 'action', value: 'Odustani'}

- if @error
  %p= @error
