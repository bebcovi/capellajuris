!!!
%html{lang: 'hr'}

  %head
    %title= "Capella juris &ndash; #{@page_title}"
    %meta{charset: 'utf-8'}
    %meta{name: 'description', content: 'Službene stranice Capelle juris.'}
    %meta{name: 'author', content: 'Matija Marohnić &lt;matija.marohnic@gmail.com&gt;'}
    %link{rel: 'shortcut icon', href: 'images/favicon.ico'}
    -# %link{:rel => 'alternate', :type => 'application/atom+xml', :title => 'Vijesti', :href => 'feed/feed.xml'}
    %link{rel: 'stylesheet', type: 'text/css', media: 'screen, projection', href: '/css/screen.css'}
    %script{type: 'text/javascript', src: 'http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.js'}
    %script{type: 'text/javascript', src: 'js/modernizr.custom.js'}
    %script{type: 'text/javascript', src: 'js/init.js'}

  %body

    #wrapper

      %header

        .inner

          %a#logo{href: '/'}
            %img{src: '/images/logo.png', alt: 'logo', width: '225', height: '111'}

          %img#photo{src: '/images/header.jpg', alt: 'header photo', width: '602', height: '181'}

        %nav
          %ol
            - ['index','o_nama','slike','video'].each do |page|
              %li
                %a{href: "/#{page}", class: current?(page) && 'current'}= page_on_croatian(page)

      #main
        = yield

      %footer

        %article#contact
          %p
            %span.label Kontakt
            %span.value
              %a{href: 'mailto:capellajuris@gmail.com'} capellajuris@gmail.com

        %article#facebook
          %p Pratite nas na Facebooku za novosti, najave nastupa i slike
          %a{href: 'http://www.facebook.com/group.php?gid=15322005634', target: '_blank'}
