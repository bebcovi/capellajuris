- @page_title = 'Zbor Pravnog fakulteta u Zagrebu'

%p#log
  - unless logged_in?
    %a{href: '/login'} Prijava administratora
  - else
    %a{href: '/logout'} Odjava

%section#intro

  .inner

    - @intro = Content[type: 'intro']

    %article.main
      = render_markdown(@intro.text)

      %p
        %a{href: '/o_nama'} Opširnije
        %a.arrow{href: '/o_nama'} ▶

      - buttons({:edit => true}, "/content/#{@intro.id}") if logged_in?

    %aside

      - @sidebar = Sidebar.first

      %section#video

        %h2= @sidebar.video_title

        = @sidebar.video

      %section#audio

        %h2= @sidebar.audio_title

        %audio{controls: true, preload: true}
          %source{src: "/audio/#{@sidebar.audio}.mp3"}
          %source{src: "/audio/#{@sidebar.audio}.ogg"}

      - buttons({:edit => true}, "/sidebar/#{@sidebar.id}") if logged_in?

%section#news

  = render_markdown Content[type: 'news'].text

  = haml :'partials/news'
