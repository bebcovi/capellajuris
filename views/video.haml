- @page_title = 'Video'

#videos

  %ul

    = list_of(Video.all) do |video|
      %h1= video.title.try(:gsub, '-', '&ndash;')
      = video.embed_code
      - if logged_in?
        .center
          - buttons({delete: 'Izbri≈°i', edit: 'Izmjeni'}, "/video/#{video.id}")

  - buttons({add: 'Dodaj +'}, '/video/new') if logged_in?
