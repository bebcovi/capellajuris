- @page_title = 'Video'

#videos

  %ul

    = list_of(Video.all) do |video|
      %h1= video.title.try(:gsub, '-', '&ndash;')
      = video.embed_code
      - if logged_in?
        .center
          - buttons({delete: 'Izbriši', edit: 'Izmjeni'}, "/video/#{video.id}")

  - buttons({add: 'Dodaj +'}, '/video/new') if logged_in?

  %p#top
    %a{href: '#'} Povratak na vrh
    %a.arrow{href: '#'} ▲
