%article{id: string_to_id(@content.text)}
  %header
    = render_markdown @content.text

  - for voice in Member.voices
    %section.members

      %h2= voice.capitalize

      %ol
        = list_of Member.by_voice(voice).order(:last_name) do |member|
          = member

  - if logged_in?
    %ol.controls
      %li
        - edit_button('/members')
