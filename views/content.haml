- @page_title = 'Content'

- if logged_in?
  - form_tag(action: "/edit_content/#{session[:content].id}", method: 'post') do
    %input{type: 'text', name: 'title', value: session[:content].title}
    %textarea{type: 'text', name: 'body', rows: 15, cols: 100, style: 'display: block'}= session[:content].body
    %input{type: 'submit', name: 'action', value: 'Izmjeni'}
    %input{type: 'submit', name: 'action', value: 'Odustani'}
  - button(action: "/delete_content/#{session[:content].id}", method: 'delete', value: 'Izbri≈°i')
