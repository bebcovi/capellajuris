- @page_title = 'Zbor Pravnog fakulteta u Zagrebu'

%section#intro
  .inner
    %article.main
      %h1= @intro[:title]
      != @intro[:photo]
      != render_markdown(@intro[:text])

      %p= link_to 'Opširnije →', about_us_path

    %aside
      %section#video
        %h2= @sidebar[:video_title]
        != @sidebar[:video]

      %section#audio
        %h2= @sidebar[:audio_title]
        = audio_tag @sidebar[:audio], :controls => true, :autobuffer => true

%section#news
  %h1 Vijesti

  = link_to "Dodaj", new_news_path

  - @news.each do |news|
    %article
      %header
        %h1= news.title
        = time_tag news.created_at, croatian_date(news.created_at), :pubdate => true
      != render_markdown(news.text)
      != news.photo
      = link_to "Izmjeni", edit_news_path(news)
      = link_to "Izbriši", news_path(news), :method => :delete
